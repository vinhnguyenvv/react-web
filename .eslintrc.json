{
    "env": {
        "browser": true
    },
    "extends": "plugin:react/recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error", 4
        ],
        "linebreak-style": [
            0
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
      
    }
}